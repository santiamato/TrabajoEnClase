float retornarNumero();

int main(void) {
	setbuf(stdout, NULL);

	printf("Ingrese un numero mayor a 0 ");
	scanf("%d", &numero);
	mostrarNuemro(numero);



	return EXIT_SUCCESS;
}


int mostrarNumero(int numero) {
	do{
		printf("El numero ingresado es %d y es mayor a 0", numero);
	}while(numero < 1);

	return numero;
}

float retornarNumero() {
	float numero;
	printf("Ingrese un num flotante ");
	scanf("%f", &numero);


	return numero;
}
