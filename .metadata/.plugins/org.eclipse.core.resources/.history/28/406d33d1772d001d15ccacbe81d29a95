#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);
	float temp;
	float tempPTR;
	char opcion;

	printf("Quiere ingresar Celsius o Fahrenheit, para convertirlo al otro: c/f");
	fflush(stdin);
	scanf("%c", &opcion);

	if(opcion == 'c'){
		tempPTR  = validarCelsius(&temp);
		printf("La temperatura es: %f", tempPTR);
	}else if(opcion == 'f'){
		tempPTR = validarFahrenheit(&temp);
	}



	return EXIT_SUCCESS;
}
