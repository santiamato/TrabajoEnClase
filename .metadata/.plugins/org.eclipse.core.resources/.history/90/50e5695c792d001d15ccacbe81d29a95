#include <stdio.h>
#include <stdlib.h>
#include "validaciones.h"
#include "conversion.h"

int main(void) {
	setbuf(stdout, NULL);
	float temp;
	char opcion;

	printf("Quiere ingresar Celsius o Fahrenheit, para convertirlo al otro: c/f");
	fflush(stdin);
	scanf("%c", &opcion);

	if(opcion == 'c'){
		temp  = validarCelsius(&temp);
		printf("La temperatura es: %f", temp);
	}else if(opcion == 'f'){
		temp = validarFahrenheit(&temp);
	}



	return EXIT_SUCCESS;
}
