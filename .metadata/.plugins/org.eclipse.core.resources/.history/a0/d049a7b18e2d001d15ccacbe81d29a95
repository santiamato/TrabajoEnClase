#include <stdio.h>
#include <stdlib.h>

int mostrarMenu();
int validarOpcion(int opcion, int opcionAceptada);

int main(void) {
	setbuf(stdout, NULL);

	int opcion;

	if(	validarOpcion(mostrarMenu(), 1) == 0){
		printf("Usted se a logueado Correctamente");
	}

	return EXIT_SUCCESS;
}

int mostrarMenu(){
	int opcion;
	printf("1. Loguearse \n"
			"2. Comprar \n"
			"3. Ver mis compras \n"
			"4. Vender \n"
			"5. Salir \n");
	scanf("%d", &opcion);

	return opcion;
}

int validarOpcion(int opcion, int opcionAceptada){
	while(opcion != opcionAceptada){
		opcion = mostrarMenu();
		printf("Primero debe de loguear para poder continuar...\n");
	}
	return 0;
}
