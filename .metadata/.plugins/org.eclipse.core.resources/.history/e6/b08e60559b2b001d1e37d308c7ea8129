#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int numero1;
	int numero2;

	do{
		printf("Ingrese un numero: ");
		scanf("%d", &numero1);
	}while(numero1 < 10 || numero1 > 100);

	do{
			printf("Ingrese un numero: ");
			scanf("%d", &numero2);
		}while(numero2 < 10 || numero2 > 100);

	printf("El numero ingresado con el descuento es: %f", realizarDesc(numero1));

	return EXIT_SUCCESS;
}

