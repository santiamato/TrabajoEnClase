#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);

	int opcion;

	printf("1. Loguearse \n"
			"2. Comprar \n"
			"3. Ver mis compras \n"
			"4. Vender \n"
			"5. Salir \n");
	scanf("%d", &opcion);

	if(opcion != 1){
		printf("Primero debe loguearse para poder realizar las otras acciones \n");
	}else{
		printf("Usted se a logueado Correctamente \n");
	}


	return EXIT_SUCCESS;
}
