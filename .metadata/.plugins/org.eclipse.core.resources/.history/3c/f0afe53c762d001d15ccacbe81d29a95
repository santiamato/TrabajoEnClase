#include <stdio.h>
#include <stdlib.h>

int main(void) {
	setbuf(stdout, NULL);
	int temp;
	int opcion;

	printf("Quiere ingresar Celsius o Fahrenheit, para convertirlo al otro: c/f");
	fflush(stdin);
	scanf("%c", &opcion);

	if(opcion == 'c'){
		temp  = validarCelsius();
	}else if(opcion == 'f'){
		temp = validarFahrenheit();
	}



	return EXIT_SUCCESS;
}
