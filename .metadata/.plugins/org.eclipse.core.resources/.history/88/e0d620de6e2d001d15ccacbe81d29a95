#include <stdio.h>
#include <stdlib.h>

int sumar(int num1, int num2, int *resultado);

int main(void) {
	setbuf(stdout, NULL);
	int resultado;
	int resultadoPtr;
	resultadoPtr = sumar(1, 2, &resultado);



	printf("El resultado de la suma es: %d", resultado);

	return EXIT_SUCCESS;
}

int sumar(int num1, int num2, int *resultado){
	int aux = *resultado;
	aux = num1 + num2;
	*resultado = aux;
	return 0;
}
