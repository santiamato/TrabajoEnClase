#include <stdio.h>
#include <stdlib.h>

int mostrarMenu();
int validarOpcion(int opcion, int opcionAceptada);

int main(void) {
	setbuf(stdout, NULL);

	int opcion;

	while(validarOpcion(mostrarMenu(), 1) != 0){
		opcion = mostrarMenu();
		if(opcion != 1){
			printf("Primero debe loguearse para poder realizar las otras acciones \n");
		}else{
			printf("Usted se a logueado Correctamente \n");

		}
	}


	return EXIT_SUCCESS;
}

int mostrarMenu(){
	int opcion;
	printf("1. Loguearse \n"
			"2. Comprar \n"
			"3. Ver mis compras \n"
			"4. Vender \n"
			"5. Salir \n");
	scanf("%d", &opcion);

	return opcion;
}

int validarOpcion(int opcion, int opcionAceptada){
	if(opcion == opcionAceptada){
		return 0;
	}else{
		return 1;
	}
}
