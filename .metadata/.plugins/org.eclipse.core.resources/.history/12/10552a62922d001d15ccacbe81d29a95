#include <stdio.h>
#include <stdlib.h>

int mostrarMenu();
int validarOpcion(int opcion, int opcionAceptada);

int main(void) {
	setbuf(stdout, NULL);

	int compras = 2;

	if(	validarOpcion(mostrarMenu(), 1) == 0){
		printf("Usted se a logueado Correctamente \n");
		if(validarOpcion(mostrarMenu(), 2) == 0){
			printf("Usted a ingresado en la seccion de Compras \n");
			if(mostrarMenu() == 4 && compras > 0){
				printf("1. Vender \n"
						"2. Hacer factura \n"
						"3. Volver atras \n");
			}
		}
	}

	return EXIT_SUCCESS;
}

int mostrarMenu(){
	int opcion;
	printf("1. Loguearse \n"
			"2. Comprar \n"
			"3. Ver mis compras \n"
			"4. Vender \n"
			"5. Salir \n");
	scanf("%d", &opcion);

	return opcion;
}

int validarOpcion(int opcion, int opcionAceptada){
	while(opcion != opcionAceptada){
		printf("Primero debe de pasar por lo anterior para poder continuar...\n");
		opcion = mostrarMenu();
	}
	return 0;
}
