#include <stdio.h>
#include <stdlib.h>

int sumar(int num1, int num2, int *resultado);

int main(void) {
	setbuf(stdout, NULL);

	int num1;
	int num2;
	int *resultadoPtr;

	*resultadoPtr = sumar(1, 2, *resultadoPtr);


	printf("El resultado de la suma es: %d", resultadoPtr);

	return EXIT_SUCCESS;
}

int sumar(int num1, int num2, int *resultado){
	resultado = num1 + num2;
	*resultado = resultado;

	return 0;
}
