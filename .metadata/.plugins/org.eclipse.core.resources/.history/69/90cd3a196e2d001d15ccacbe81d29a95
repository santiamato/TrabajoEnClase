#include <stdio.h>
#include <stdlib.h>

int sumar(int num1, int num2, int *resultado);

int main(void) {
	setbuf(stdout, NULL);

	int resultado;
	resultado = sumar(2, 2, &resultado);



	printf("El resultado de la suma es: %d", resultado);

	return EXIT_SUCCESS;
}

int sumar(int num1, int num2, int *resultado){
	int resultado2;
	resultado2 = num1 + num2;
	*resultado = resultado2;
	return 0;
}
